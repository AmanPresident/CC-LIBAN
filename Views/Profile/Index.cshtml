@model test7.Models.User

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Mon Profil - DASHMIN</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="/Dashboard/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/Dashboard/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="/Dashboard/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/Dashboard/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/Dashboard/css/style.css" rel="stylesheet">
</head>

<body>
    <div class="container-fluid position-relative bg-white d-flex p-0">
        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-light navbar-light">
                <a asp-controller="Dashboard" asp-action="index" class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary"><i class="bi bi-cart"></i>&nbsp; CC-LIBAN</h3>
                </a>
                <div class="d-flex align-items-center ms-4 mb-4">
                    <div class="position-relative">
                        @if (!string.IsNullOrEmpty(Model.ProfileImage))
                        {
                            <img class="rounded-circle" src="~/@Model.ProfileImage" alt="@Model.FullName" style="width: 40px; height: 40px; object-fit: cover;">
                        }
                        else
                        {
                            <img class="rounded-circle" src="/Dashboard/img/user.jpg" alt="" style="width: 40px; height: 40px;">
                        }
                        <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                    </div>
                    <div class="ms-3">
                        <h6 class="mb-0">@Model.FullName</h6>
                        <span>@Model.Role</span>
                    </div>
                </div>
                <div class="navbar-nav w-100">
                    <a asp-controller="Dashboard" asp-action="index" class="nav-item nav-link"><i class="bi bi-bar-chart-line-fill"></i>Dashboard</a>
                    <a asp-controller="Profile" asp-action="Index" class="nav-item nav-link active"><i class="fas fa-user"></i>Mon Profil</a>
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-laptop me-2"></i>Produits</a>
                            <div class="dropdown-menu bg-transparent border-0">
                                <a asp-controller="Dashboard" asp-action="AjouterProduit" class="dropdown-item">Ajouter un produit</a>
                                <a asp-controller="Dashboard" asp-action="ListeProduit" class="dropdown-item">Liste des Produits</a>
                            </div>
                        </div>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-table me-2"></i>Categories</a>
                            <div class="dropdown-menu bg-transparent border-0">
                                <a asp-controller="Dashboard" asp-action="AjouterCategorie" class="dropdown-item">Ajouter une Categories</a>
                            </div>
                        </div>
                    }
                </div>
            </nav>
        </div>
        <!-- Sidebar End -->
        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <nav class="navbar navbar-expand bg-light navbar-light sticky-top px-4 py-0">
                <a href="index.html" class="navbar-brand d-flex d-lg-none me-4">
                    <h2 class="text-primary mb-0"><i class="fa fa-hashtag"></i></h2>
                </a>
                <a href="#" class="sidebar-toggler flex-shrink-0">
                    <i class="fa fa-bars"></i>
                </a>
                <div class="navbar-nav align-items-center ms-auto">
                    <!-- Votre navbar existante... -->
                </div>
            </nav>
            <!-- Navbar End -->
            <!-- Messages de succès -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="container-fluid pt-4 px-4">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            }

            <!-- Mon Profil Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <!-- Titre -->
                    <div class="col-12">
                        <div class="bg-light rounded h-100 p-4">
                            <h6 class="mb-4"><i class="fas fa-user"></i> Mon Profil</h6>

                            <div class="row">
                                <!-- Photo de profil et infos principales -->
                                <div class="col-md-4">
                                    <div class="text-center">
                                        @if (!string.IsNullOrEmpty(Model.ProfileImage))
                                        {
                                            <img src="~/@Model.ProfileImage" alt="@Model.FullName" class="img-fluid rounded-circle mb-3" style="width: 200px; height: 200px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="bg-secondary d-flex align-items-center justify-content-center rounded-circle mx-auto mb-3" style="width: 200px; height: 200px;">
                                                <i class="fas fa-user fa-4x text-white"></i>
                                            </div>
                                        }
                                        <h4 class="text-primary">@Model.FullName</h4>
                                        <p class="text-muted">
                                            <span class="badge bg-@(Model.Role == "Admin" ? "danger" : "info")">@Model.Role</span>
                                        </p>
                                    </div>
                                </div>

                                <!-- Informations détaillées -->
                                <div class="col-md-8">
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <label class="form-label fw-bold">ID:</label>
                                            <p class="text-muted">#@Model.Id</p>
                                        </div>

                                        <div class="col-md-6">
                                            <label class="form-label fw-bold">Email:</label>
                                            <p class="text-muted">@Model.Email</p>
                                        </div>

                                        <div class="col-md-6">
                                            <label class="form-label fw-bold">Téléphone:</label>
                                            <p class="text-muted">
                                                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                                {
                                                    @Model.PhoneNumber
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Non renseigné</span>
                                                }
                                            </p>
                                        </div>

                                        <div class="col-md-6">
                                            <label class="form-label fw-bold">Date d'inscription:</label>
                                            <p class="text-muted">@Model.DateCreation.ToString("dd/MM/yyyy HH:mm")</p>
                                        </div>

                                        <div class="col-12">
                                            <label class="form-label fw-bold">Adresse:</label>
                                            <div class="bg-white p-3 rounded border">
                                                @if (!string.IsNullOrEmpty(Model.Address))
                                                {
                                                    <p class="mb-0">@Model.Address</p>
                                                }
                                                else
                                                {
                                                    <p class="text-muted mb-0">Adresse non renseignée</p>
                                                }
                                            </div>
                                        </div>

                                        <!-- Boutons d'action -->
                                        <div class="col-12 mt-4">
                                            <div class="d-flex gap-2">
                                                <a asp-controller="Profile" asp-action="Edit" class="btn btn-warning">
                                                    <i class="fas fa-edit"></i> Modifier mon profil
                                                </a>
                                                <a asp-controller="Profile" asp-action="ChangePassword" class="btn btn-info">
                                                    <i class="fas fa-key"></i> Changer mot de passe
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Mon Profil End -->
            <!-- Footer Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="bg-light rounded-top p-4">
                    <div class="row">
                        <div class="col-12 col-sm-6 text-center text-sm-start">
                            &copy; <a href="#">Your Site Name</a>, All Right Reserved.
                        </div>
                        <div class="col-12 col-sm-6 text-center text-sm-end">
                            Designed By <a href="https://htmlcodex.com">HTML Codex</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer End -->
        </div>
        <!-- Content End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/Dashboard/lib/chart/chart.min.js"></script>
    <script src="/Dashboard/lib/easing/easing.min.js"></script>
    <script src="/Dashboard/lib/waypoints/waypoints.min.js"></script>
    <script src="/Dashboard/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/Dashboard/lib/tempusdominus/js/moment.min.js"></script>
    <script src="/Dashboard/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="/Dashboard/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="/Dashboard/js/main.js"></script>
</body>

</html>