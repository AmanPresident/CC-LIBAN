@model test7.Models.Produit

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Détails du Produit - DASHMIN</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="/Dashboard/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="/Dashboard/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="/Dashboard/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="/Dashboard/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="/Dashboard/css/style.css" rel="stylesheet">
</head>

<body>
    <div class="container-fluid position-relative bg-white d-flex p-0">
        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-light navbar-light">
                <a asp-controller="Dashboard" asp-action="index" class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary"><i class="bi bi-cart"></i>&nbsp; CC-LIBAN</h3>
                </a>
                <div class="d-flex align-items-center ms-4 mb-4">
                    <div class="position-relative">
                        <img class="rounded-circle" src="img/user.jpg" alt="" style="width: 40px; height: 40px;">
                        <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                    </div>
                    <div class="ms-3">
                        <h6 class="mb-0">Aman</h6>
                        <span>Admin</span>
                    </div>
                </div>
                <div class="navbar-nav w-100">
                    <a asp-controller="Dashboard" asp-action="index" class="nav-item nav-link "><i class="bi bi-bar-chart-line-fill"></i>Dashboard</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle active" data-bs-toggle="dropdown"><i class="fa fa-laptop me-2"></i>Produits</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a asp-controller="Dashboard" asp-action="AjouterProduit" class="dropdown-item active">Ajouter un produit</a>
                            <a asp-controller="Dashboard" asp-action="ListeProduit" class="dropdown-item">Liste des Produits</a>

                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-table me-2"></i>Categories</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a asp-controller="Dashboard" asp-action="AjouterCategorie" class="dropdown-item">Ajouter une Categories</a>
                            <a href="typography.html" class="dropdown-item">Typography</a>
                            <a href="element.html" class="dropdown-item">Other Elements</a>
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fas fa-users me-1"></i>Livreurs</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a asp-controller="Dashboard" asp-action="#" class="dropdown-item">Ajouter un Livreur</a>
                            <a href="typography.html" class="dropdown-item">Typography</a>
                            <a href="element.html" class="dropdown-item">Other Elements</a>
                        </div>
                    </div>

                </div>
            </nav>
        </div>
        <!-- Sidebar End -->
        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <nav class="navbar navbar-expand bg-light navbar-light sticky-top px-4 py-0">
                <a href="index.html" class="navbar-brand d-flex d-lg-none me-4">
                    <h2 class="text-primary mb-0"><i class="fa fa-hashtag"></i></h2>
                </a>
                <a href="#" class="sidebar-toggler flex-shrink-0">
                    <i class="fa fa-bars"></i>
                </a>

                <div class="navbar-nav align-items-center ms-auto">



                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            <img class="rounded-circle me-lg-2" src="img/user.jpg" alt="" style="width: 40px; height: 40px;">
                            <span class="d-none d-lg-inline-flex">Aman</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0">
                            <a asp-controller="Profile" asp-action="Index" class="dropdown-item">My Profile</a>
                            <a href="#" class="dropdown-item">Settings</a>
                            <a asp-controller="Account" asp-action="Logout" class="dropdown-item">Log Out</a>
                        </div>
                    </div>
                </div>
            </nav>
            <!-- Navbar End -->
            <!-- Détails du Produit Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <!-- Bouton de retour -->
                    <div class="col-12">
                        <a asp-controller="Dashboard" asp-action="ListeProduit" class="btn btn-secondary mb-3">
                            <i class="fas fa-arrow-left"></i> Retour à la liste
                        </a>
                    </div>

                    <!-- Carte des détails -->
                    <div class="col-12">
                        <div class="bg-light rounded h-100 p-4">
                            <h6 class="mb-4">Détails du Produit</h6>
                            <div class="row">
                                <!-- Image du produit -->
                                <div class="col-md-4">
                                    @if (!string.IsNullOrEmpty(Model.UrlImage))
                                    {
                                        <img src="~/@Model.UrlImage" alt="@Model.Name" class="img-fluid rounded" style="max-height: 300px; width: 100%; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary d-flex align-items-center justify-content-center rounded" style="height: 300px;">
                                            <i class="fas fa-image fa-3x text-white"></i>
                                        </div>
                                    }
                                </div>

                                <!-- Informations du produit -->
                                <div class="col-md-8">
                                    <div class="row g-3">
                                        <div class="col-12">
                                            <h4 class="text-primary">@Model.Name</h4>
                                        </div>

                                        <div class="col-md-6">
                                            <label class="form-label fw-bold">ID:</label>
                                            <p class="text-muted">#@Model.Id</p>
                                        </div>

                                        <div class="col-md-6">
                                            <label class="form-label fw-bold">Prix:</label>
                                            <p class="text-success fs-5 fw-bold">
                                                @if (Model.Prix.HasValue)
                                                {
                                                    @Model.Prix.Value.ToString("N0") <span>Fdj</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Prix non défini</span>
                                                }
                                            </p>
                                        </div>

                                        <div class="col-md-6">
                                            <label class="form-label fw-bold">Catégorie:</label>
                                            <p class="text-muted">
                                                @if (Model.Categorie != null)
                                                {
                                                    <span class="badge bg-info">@Model.Categorie.Name</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Pas de catégorie</span>
                                                }
                                            </p>
                                        </div>

                                        <div class="col-md-6">
                                            <label class="form-label fw-bold">Type:</label>
                                            <p class="text-muted">
                                                @if (!string.IsNullOrEmpty(Model.Type))
                                                {
                                                    <span class="badge bg-primary">@Model.Type</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Type non défini</span>
                                                }
                                            </p>
                                        </div>

                                        <div class="col-md-6">
                                            <label class="form-label fw-bold">Date de création:</label>
                                            <p class="text-muted">
                                                @if (Model.DateCreation.HasValue)
                                                {
                                                    <span class="badge bg-info">@Model.DateCreation.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Date non disponible</span>
                                                }
                                            </p>
                                        </div>

                                        <div class="col-md-6">
                                            <label class="form-label fw-bold">Status:</label>
                                            <p class="text-muted">
                                                <span class="badge bg-success">EN STOCK</span>
                                            </p>
                                        </div>

                                        <div class="col-12">
                                            <label class="form-label fw-bold">Description:</label>
                                            <div class="bg-white p-3 rounded border">
                                                @if (!string.IsNullOrEmpty(Model.Description))
                                                {
                                                    <p class="mb-0">@Model.Description</p>
                                                }
                                                else
                                                {
                                                    <p class="text-muted mb-0">Aucune description disponible</p>
                                                }
                                            </div>
                                        </div>

                                        <!-- Boutons d'action -->
                                        <div class="col-12 mt-4">
                                            <div class="d-flex gap-2">
                                                <a asp-controller="Dashboard" asp-action="ModifierProduit" asp-route-id="@Model.Id" class="btn btn-warning">
                                                    <i class="fas fa-edit"></i> Modifier
                                                </a>
                                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                                    <i class="fas fa-trash"></i> Supprimer
                                                </button>
                                                <a asp-controller="Dashboard" asp-action="ListeProduit" class="btn btn-info">
                                                    <i class="fas fa-list"></i> Voir tous les produits
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Détails du Produit End -->
            <!-- Modal de confirmation de suppression -->
            <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header bg-danger text-white">
                            <h5 class="modal-title" id="deleteModalLabel">
                                <i class="fas fa-exclamation-triangle"></i> Confirmer la suppression
                            </h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="text-center">
                                <i class="fas fa-trash fa-3x text-danger mb-3"></i>
                                <h5>Êtes-vous sûr de vouloir supprimer ce produit ?</h5>
                                <p class="text-muted">
                                    <strong>Produit :</strong> @Model.Name<br>
                                    <strong>ID :</strong> #@Model.Id
                                </p>
                                <div class="alert alert-warning">
                                    <i class="fas fa-exclamation-triangle"></i>
                                    Cette action est irréversible !
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                <i class="fas fa-times"></i> Annuler
                            </button>
                            <a asp-controller="Dashboard" asp-action="SupprimerProduit" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Oui, supprimer
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="bg-light rounded-top p-4">
                    <div class="row">
                        <div class="col-12 col-sm-6 text-center text-sm-start">
                            &copy; <a href="#">Your Site Name</a>, All Right Reserved.
                        </div>
                        <div class="col-12 col-sm-6 text-center text-sm-end">
                            Designed By <a href="https://htmlcodex.com">HTML Codex</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer End -->
        </div>
        <!-- Content End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/Dashboard/lib/chart/chart.min.js"></script>
    <script src="/Dashboard/lib/easing/easing.min.js"></script>
    <script src="/Dashboard/lib/waypoints/waypoints.min.js"></script>
    <script src="/Dashboard/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="/Dashboard/lib/tempusdominus/js/moment.min.js"></script>
    <script src="/Dashboard/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="/Dashboard/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="/Dashboard/js/main.js"></script>
</body>

</html>